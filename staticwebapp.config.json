{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/auth/*", "/approve/*", "*.{css,js,json,png,jpg,gif,svg,ico,txt}"]
  },
  "routes": [
    {
      "route": "/api/projects*",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/auth/register",
      "methods": ["POST"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/auth/forgot-password",
      "methods": ["POST"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/approve/*",
      "methods": ["GET"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/auth/admin/pending-approvals",
      "methods": ["GET"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200,
      "exclude": ["/api/*", "/auth/*", "/approve/*"]
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' https://pt-power-pipeline-api.azurewebsites.net; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';",
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With"
  },
  "mimeTypes": {
    ".json": "application/json"
  }
}
